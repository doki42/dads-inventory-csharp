@using Microsoft.AspNetCore.Identity
@using DadsInventory.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
	    <a id="manage" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button" class="nav-link dropdown-toggle text-dark" title="Manage">@UserManager.GetUserName(User)! <i class='fas fa-user-alt' style='font-size:24px'></i></a>
	    <div class="dropdown-menu">
		    <form id="logoutForm" class="dropdown-item form-inline" asp-controller="Account" asp-action="Logout" >
			    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
		    </form>
		    
	    </div>
    </li>
    <li class="nav-item">
        
    </li>

    <li class="nav-item">
    
</li>
